    // Esconde a mensagem ap√≥s 5 segundos
    setTimeout(() => {
        successMsg.style.display = 'none';
    }, 5000);
    
    // Limpa o formul√°rio
    this.reset();
    
    // Scroll suave at√© a mensagem de sucesso
    successMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });
});

// Adiciona efeito de digita√ß√£o aos inputs
