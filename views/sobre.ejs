<style>
.feature-highlight {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(147, 51, 234, 0.15));
    padding: 30px;
    border-radius: 20px;
    border: 2px solid rgba(59, 130, 246, 0.3);
    margin: 20px 0;
    position: relative;
    overflow: hidden;
}

.feature-highlight::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
    animation: rotate 15s linear infinite;
}

.timeline {
    position: relative;
    padding: 20px 0;
}

.timeline-item {
    background: rgba(255, 255, 255, 0.08);
    padding: 25px;
    border-radius: 16px;
    margin: 20px 0;
    border-left: 5px solid;
    transition: all 0.4s ease;
    position: relative;
}

.timeline-item:nth-child(1) { border-color: #22c55e; }
.timeline-item:nth-child(2) { border-color: #3b82f6; }
.timeline-item:nth-child(3) { border-color: #a78bfa; }
.timeline-item:nth-child(4) { border-color: #ec4899; }

.timeline-item:hover {
    transform: translateX(10px) scale(1.02);
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.timeline-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-bottom: 15px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
}

.tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.tech-item {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    padding: 25px;
    border-radius: 16px;
    text-align: center;
    border: 1.5px solid rgba(255, 255, 255, 0.15);
    transition: all 0.4s ease;
    cursor: pointer;
}

.tech-item:hover {
    transform: translateY(-10px) rotate(2deg);
    box-shadow: 0 20px 50px rgba(167, 139, 250, 0.4);
    border-color: rgba(167, 139, 250, 0.5);
    background: linear-gradient(135deg, rgba(167, 139, 250, 0.2), rgba(236, 72, 153, 0.2));
}

.tech-item-icon {
    font-size: 3.5rem;
    margin-bottom: 15px;
    filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3));
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.info-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: rgba(255, 255, 255, 0.1);
    padding: 16px 24px;
    border-radius: 50px;
    margin: 10px;
    border: 1.5px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
}

.info-badge:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 10px 30px rgba(167, 139, 250, 0.3);
}

.info-badge-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
}

.stat-highlight {
    text-align: center;
    padding: 30px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(16, 185, 129, 0.15));
    border-radius: 20px;
    border: 2px solid rgba(34, 197, 94, 0.3);
    transition: all 0.4s ease;
}

.stat-highlight:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 50px rgba(34, 197, 94, 0.4);
}

.stat-number-large {
    font-size: 4rem;
    font-weight: 900;
    background: linear-gradient(135deg, #22c55e, #10b981);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 10px;
}
</style>

